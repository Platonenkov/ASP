@model IEnumerable<WebStore.Models.Employee>


    <a asp-controller="Home" asp-action="Index">Главная</a>
    <div style="height:90vh">
        <h3>Сотрудники</h3>

        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Возраст</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.SurName</td>
                        <td>@employee.FirstName</td>
                        <td>@employee.Patronymic</td>
                        <td>@employee.Age</td>
                        <td><a asp-controller="Employes" asp-action="Details" asp-route-id="@employee.Id">Детали</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <hr />
    <p style="text-align:center">&copy; 2019 Platonenkov</p>